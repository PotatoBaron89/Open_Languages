<div class="mx-auto w-full flex">
  <div class="mx-auto w-10/12 ">


    <div id="<%= dom_id @course %>" class="p-5 max-w-screen ">
      <div class="rounded overflow-hidden shadow-lg rounded-b-md fd-cl bg-blue-50">
        <% if @course.cover_image.attached? %>
          <section class="flex mb-5">
            <%= cl_image_tag @course.cover_image.url, class: "object-cover h-80", crop: :scale, width: 600, cloud_name: 'dkyqazxdm' if @course.cover_image.attached?  %>
            <div class="flex pl-12 bg-blue-100 w-full flex-col pt-5">
            <strong class="block font-medium mb-5"></strong>
              <p class="my-5">
                <strong class="block font-medium mb-1 truncate">Description:</strong>
                <%= @course.description %>
              </p>
            </div>
          </section>
        <% end %>

        <article class="p-5 ">
          <% if @lessons %>
            <% @lessons.each do |l| %>
              <%= link_to l.title, lesson_path(l.id), class: "flex flex-wrap w-48 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <% end %>
          <% end %>

          <p class="my-5">
            <strong class="block font-medium mb-1 truncate">Content:</strong>
            <%= @course.content %>
          </p>

          <p class="my-5">
            <strong class="block font-medium mb-1">User:</strong>

          </p>
          <% if action_name != "show" %>
            <%= link_to "Show this course", @course, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
            <%= link_to 'Edit this course', edit_course_path(@course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
            <hr class="mt-6">
          <% end %>
        </article>
      </div>
    </div>




    <%= link_to 'Edit this course', edit_course_path(@course), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Add Lesson', new_lesson_path(course: @course), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this course', course_path(@course), method: :delete, data: { confirm: "Are you sure you want to delete this course?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to courses', courses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
