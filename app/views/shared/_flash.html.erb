<div class="pt-10 bg-gray-900 sm:pt-16 lg:pt-8 lg:pb-14 text-yellow-400">
  <% if flash[:notice] %>
    <div class="alert-primary alert mt-4" role='alert'>
      <%= flash.now[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert-warning alert mt-4" role='alert'>
      <%= flash.now[:alert] %>
    </div>
  <% end %>
</div>